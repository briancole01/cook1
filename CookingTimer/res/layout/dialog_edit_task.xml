<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  android:id="@+id/layout_root" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="2dp"
	android:paddingRight="2dp">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="Parent Task:" />

	<TextView android:id="@+id/titlePrefixText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="Title:" />

	<EditText android:id="@+id/titleText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="" />
		
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="Description:" />

	<EditText android:id="@+id/descriptionText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="" />
		
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="Minutes:" />

	<EditText android:id="@+id/minutesText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3px"
		android:autoLink="web" android:text="" android:inputType="number"/>
		
</LinearLayout>

